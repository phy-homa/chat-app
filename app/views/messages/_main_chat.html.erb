<div class="main_header">
  <div class="group_name">
  <%= @room.name %>
  </div>
  <div class="finish_chat_box">
      <div class="finish_chat">
        <a href="#">チャットを終了する</a>
      </div>
  </div>
</div>
<div class="chat_screen">
  <%= render partial: 'message', collection: @messages %>
</div>
<%= form_with model:[@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'message_box',placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden"%>
    </label>
    <%= f.submit "送信", class: "submit_btn" %>
  </div>
<% end %>